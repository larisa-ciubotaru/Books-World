doctype html
html
  head
    title= title
    link(rel='preconnect' href='https://fonts.gstatic.com')
    link(href='https://fonts.googleapis.com/css2?family=Rakkas&family=Source+Sans+Pro&display=swap' rel='stylesheet')
    //link(rel='stylesheet', href='/bootstrap-5.0.0-beta3-dist/css/bootstrap.min.css')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header
      nav.navbar.navbar-expand-lg.navbar-light.bg-light.fixed-top
        .container
          a.navbar-brand(href='/')
            img.logo(src='../images/LOGO.png')
          if !user
            .d-flex 
                ul.navbar-nav.me-auto
                  li.nav-item
                    a.btn.btn-danger.rounded-pill.px-4(href='/conecteaza-te') Conectează-te
          else 
            button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
              span.navbar-toggler-icon
            #navbarSupportedContent.collapse.navbar-collapse
              ul.navbar-nav.me-auto.text-center
                li.nav-item
                  a.nav-link(href='/carti-cele-mai-noi') C&abreve;r&#x21B;i
                li.nav-item
                  a.nav-link(href='/contul-meu') Contul meu
                li.nav-item
                  a.nav-link(href='/adauga-carti') Adaug&abreve; c&abreve;r&#x21B;i
                li.nav-item
                  a.nav-link(href='/comenzile-mele') Comenzile mele
                li.nav-item.btn-danger.rounded-pill.px-4.mx-2 
                  a#nav-link-selected.nav-link(href="/logout") Deconectare
              // Bara de search
              form(action="/results" method="POST" class="d-flex mt-2 mt-md-0")
                input(type="text" id="titlu_autor" name="titlu_autor" class="form-control" placeholder="Caută o carte" required)
                button(type="submit" class="btn btn-danger")
                  img(src="../images/search.svg" id="search-icon")
  
    block content
  
    script(src='/javascripts/script.js')

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
